{  
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "*": ["./node_modules/@types/*", "*"]
    },   
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "strictNullChecks": false,
    "target": "ES2017",
    "types": [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/*",
    "src/**/*",    
    "style/*",
    "src/configs/*.json"
  ],
  "exclude": [ "./node_modules" ]
}